  meta(charset="UTF-8")
  meta(name="viewport", content="width=device-width")
  title Daniel de Paula - CV
  link(
    type="text/css",
    rel="stylesheet",
    href="https://fonts.googleapis.com/css?family=Merriweather:400,400i,600,700|Montserrat:400,400i,600|Lato:400,400i,900|Open+Sans:400,400i,600,700"
  )
  link(type="text/css", rel="stylesheet", href="css/main.css")

#root(style="font-family: Lato")
  #page
    #main-grid
      #header
        #header-title
          span #{ info.name }
        div
          // empty div
        #header-about
          span#header-subtitle= info.position
          span.info #{ info.nationality } | #{ info.age } years old | #{ info.status }
        #contact.icon-grid
          svg.icon
            use(href="icons/place.svg#root")
          span= contact.country
          svg.icon
            use(href="icons/envelope.svg#root")
          span= contact.email

      #left-col.main-col
        //- Experience
        #jobs
          span.sec-title Experience
          each exp in experience
            .item
              .item-header
                div
                  span.item-title
                    b #{ exp.company }
                  span.loc | #{ exp.place } | #{ exp.country }
                span.role #{ exp.role }
              span.date
                span.period #{ exp.period }
                if exp.duration
                  | #{ exp.duration }
              p #{ exp.description }

        //- Education
        #edu
          span.sec-title Education
          each edu in education
            .item
              .item-header
                div
                  span.item-title
                    b #{ edu.institution }
                  span.loc | #{ edu.place } | #{ edu.country }
                span.role #{ edu.program }
              span.date
                span.period #{ edu.period }
                if edu.duration
                  | #{ edu.duration }
              p #{ edu.description }

        //- Interests
        #interests
          span.sec-title Interests
          span#hob-list= interests.join(' | ')

      #right-col.main-col
        //- Skills
        #skills
          span.sec-title Skills
          .skills-list
          each skill in skills
            span.skill-name= skill.name
            .skill-bar-outer
              .skill-bar-inner(style=`width: ${skill.score}%`)

        //- Languages
        #langs
          span.sec-title Languages
          .skills-list
          each lang in languages
            span.skill-name= lang.name
            .skill-bar-outer
              .skill-bar-inner(style=`width: ${lang.score}%`)

        //- Online
        #links
          span.sec-title Online
          #links-list.icon-grid
            svg.icon
              use(href="icons/linkedin.svg#root")
            a(href="http://linkedin.com/in/danieldepaula")
              span linkedin.com/in/danieldepaula
            svg.icon
              use(href="icons/github.svg#root")
            a(href="http://github.com/danielpes")
              span github.com/danielpes
            svg.icon
              use(href="icons/stack-overflow.svg#root")
            a(href="http://stackoverflow.com/users/3864822/")
              span stackoverflow.com/users/3864822/

        //- Recommendation
        #rec
          span.sec-title Recommendation
          #rec-content
            p.quote= recommendation.quote
            .quote-author
              b= recommendation.author.name
              br
              span= recommendation.author.role
              br
              span= recommendation.details

  #footer
    span Created with web technologies.
    span Last update: #{ new Intl.DateTimeFormat().format(new Date()) }
    a(href="https://github.com/danielpes/cv") Source

script(type="text/javascript", src="js/main.js")
